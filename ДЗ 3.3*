   "source": [
    "#Из Десятичной в Римскую\n",
    "R=['I','IV','V','IX','X','XL','L','XC','C','CD','D','CM','M']\n",
    "A=[1,4,5,9,10,40,50,90,100,400,500,900,1000]\n",
    "def roman(N):\n",
    "    res=''\n",
    "    i=12\n",
    "    while N>0:\n",
    "        while A[i]>N:\n",
    "            i=i-1\n",
    "        res=res+R[i]\n",
    "        N=N-A[i]\n",
    "    return res"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 26,
