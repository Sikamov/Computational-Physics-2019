# Интерполяция методом Лагранжа
# 0.Полином Лагранжа
def lagrange(a, x, y):
    b = 0
    l = []
    for i in range(len(x)):
        l.append(1)
        for k in range(len(x)):
            if i != k:
                l[i] = l[i] * (a - x[k]) / (x[i] - x[k])
        b = b + y[i] * l[i]
    return b

